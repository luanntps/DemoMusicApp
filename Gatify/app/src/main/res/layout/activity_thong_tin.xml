<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_bg"
    tools:context=".ThongTin_Activity">

    <ImageView
        android:id="@+id/itemback"
        android:layout_width="34dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imgavt"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:src="@drawable/image_singer" />
    <TextView
        android:id="@+id/txtusertt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên user"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="28dp"
        android:layout_marginTop="8dp"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Username"
            android:textColor= "@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtusertt2"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="DinDin"
            android:textColor="#BDBBBB"
            android:textSize="20dp"
            android:textStyle="normal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Gmail"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtgmailtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="dindin@gmail.com"
            android:layout_marginEnd="10dp"
            android:textColor="#BDBBBB"
            android:textSize="20dp"
            android:textStyle="normal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Điện thoại"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtsdttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="0123456789"
            android:textColor="#BDBBBB"
            android:textSize="20dp"
            android:textStyle="normal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="VIP"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtVIPtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Free"
            android:textColor="#BDBBBB"
            android:textSize="20dp"
            android:textStyle="normal"
            />
    </LinearLayout>
</LinearLayout>